{
    "hosting": {
        "public": "build", // "public" is the only required attribute for Hosting
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "public",
            "src"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}